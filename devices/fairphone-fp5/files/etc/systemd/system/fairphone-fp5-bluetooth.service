[Unit]
Description=Fairphone 5 Bluetooth Initialization
After=bluetooth.target sys-subsystem-bluetooth-devices-hci0.device
Wants=bluetooth.service
Requires=sys-subsystem-bluetooth-devices-hci0.device
ConditionPathExists=/sys/class/bluetooth/hci0

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStartPre=/bin/sleep 5
ExecStart=/usr/libexec/fairphone-fp5-bluetooth-init
TimeoutStartSec=120

[Install]
WantedBy=bluetooth.target
