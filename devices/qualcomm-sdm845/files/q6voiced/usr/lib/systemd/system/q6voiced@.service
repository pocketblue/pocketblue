[Unit]
Description=q6voice call audio routing
Requires=dbus.service
ConditionPathExists=/etc/q6voiced/%I.conf
ConditionFirmware=device-tree-compatible(%I)

[Service]
EnvironmentFile=/etc/q6voiced/%I.conf
ExecStart=/usr/bin/q6voiced hw:${q6voice_card},${q6voice_device}
KillMode=process
Restart=always
RestartSec=1
User=nobody
Group=audio

[Install]
WantedBy=multi-user.target
