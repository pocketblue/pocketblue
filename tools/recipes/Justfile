# Thin delegators for build/runtime recipes in tools/recipes/bin
# Keep real logic in scripts under tools/recipes/bin/

default: help

help:
    @echo "tools/recipes: disk"

# Delegator: build disk using bootc-image-builder (same args as top-level)
disk image="" type="qcow2" rootfs_override="":
    bash ./tools/recipes/bin/disk.sh "{{image}}" "{{type}}" "{{rootfs_override}}"
